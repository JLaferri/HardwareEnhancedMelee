<Window x:Class="Fizzi.Applications.SlippiConfiguration.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lview="clr-namespace:Fizzi.Applications.SlippiConfiguration.View"
        xmlns:lvm="clr-namespace:Fizzi.Applications.SlippiConfiguration.ViewModel"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Height="550" Width="700">
    <Window.Title>
        <Binding Path="Version" StringFormat="Window Name ({0})" Mode="OneTime" />
    </Window.Title>
    <Window.Style>
        <Style TargetType="Window">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                    <Setter Property="Cursor" Value="Wait" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid>
        <Grid.Style>
            <Style TargetType="Grid">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                        <Setter Property="IsHitTestVisible" Value="False" />
                        <Setter Property="IsEnabled" Value="False" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Left Side items -->
        <Button Grid.Column="0" Grid.Row="0" Margin="3" Content="Scan" Command="{Binding ScanDevices}" />
        <DataGrid Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Devices}" SelectedValuePath="Value" SelectedValue="{Binding SelectedDevice}" />
        
        <!-- Bottom log viewer and splitter -->
        <GridSplitter Grid.ColumnSpan="2" Grid.Row="2" Height="5" Background="#FFBCBCBC" HorizontalAlignment="Stretch" />
        <TextBox Grid.ColumnSpan="2" Grid.Row="3" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="{Binding SelectedDevice.Log, Mode=OneWay}" />
    </Grid>
</Window>
